#lang racket
(define (sqrt x)
  (define square (* x x))
  (define (avarage x y)
          (/ (+ x y) 2)
  )
  (define (improve guess)
          (avarage guess (/ x guess))
  )
  (define (good-enough? old-guess guess)
          (< (abs (- old-guess guess))
          0.00001)
  )
  (define (sqrt-iter old-guess guess)
          (if (good-enough? old-guess guess)
              guess
              (sqrt-iter guess (improve guess))
          )
  )
  (sqrt-iter 1.0 0.5)
)

(sqrt 0.00001)

